<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityStyle"
    android:background="?attr/colorPrimaryVariant"
    android:paddingLeft="@dimen/primary_side_padding"
    android:paddingRight="@dimen/primary_side_padding"
    android:paddingBottom="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="14dp"
        android:layout_marginBottom="24dp"
        android:text="@string/app_name"
        android:textColor="@color/yp_white"
        android:textFontWeight="500"
        android:textSize="@dimen/primary_button_text_size"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_vertical"/>

    <Button style="@style/ButtonStyle"
        android:id="@+id/search_button"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24x24"/>

    <Button style="@style/ButtonStyle"
        android:id="@+id/media_button"
        android:text="@string/media"
        app:icon="@drawable/ic_media_24x24"/>

    <Button style="@style/ButtonStyle"
        android:id="@+id/settings_button"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings_24x24"/>

</LinearLayout>
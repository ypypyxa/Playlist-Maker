<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityStyle">

    <!-- ШАПКА -->
    <LinearLayout style="@style/HeadStyle">

        <ImageButton
            android:id="@+id/ib_back"
            style="@style/BackButtonStyle"
            android:contentDescription="@string/back" />

        <TextView
            style="@style/HeadTextStyle"
            android:text="@string/search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSearch"
            style="@style/EditTextStile"
            android:drawableStart="@drawable/ic_search_16x16"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/ivClearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_close_cancel_24x24"
            android:visibility="gone"
            android:contentDescription="@string/clear" />

    </LinearLayout>

    <TextView android:id="@+id/tvHistoryHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:text="@string/searchHint"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="19sp"
        android:textFontWeight="500"
        android:textColor="?attr/colorOnPrimary"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchTrackList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/track_item"/>

        <Button android:id="@+id/btnHistoryClear"
            style="Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:text="@string/clear_history"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            app:cornerRadius="54dp"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView android:id="@+id/ivPlaceholderImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_something_went_wrong_placeholder"
                android:visibility="gone"/>

            <TextView android:id="@+id/tvPlaceholderMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:text="@string/placeholder"
                android:textSize="19sp"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnPrimary"
                android:visibility="gone"/>

            <Button android:id="@+id/btnPlaceholderButton"
                style="Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="?attr/colorOnPrimary"
                android:text="@string/refresh"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:fontFamily="@font/ys_display_medium"
                app:cornerRadius="54dp"
                android:visibility="gone"/>

            <ProgressBar android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:indeterminateTint="@color/yp_blue"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

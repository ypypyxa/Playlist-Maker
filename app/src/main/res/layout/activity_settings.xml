<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_white"
    android:orientation="vertical"
    >
    <!-- ШАПКА -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingVertical="@dimen/head_vertical_padding">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yp_white"
            android:src="@drawable/ic_back_24x24"
            android:layout_gravity="start"
            android:padding="12dp"
            android:contentDescription="@string/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_button_text_size"
            android:layout_marginStart="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- НОЧНАЯ ТЕМА -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/prinary_settings_string_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_settings_text_size"
            android:layout_marginStart="@dimen/primary_side_padding"
            android:layout_gravity="start||center_vertical"/>

        <Switch
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end||center_vertical"/>
    </FrameLayout>

    <!-- ПОДЕЛИТЬСЯ ПРИЛОЖЕНИЕМ -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/prinary_settings_string_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_settings_text_size"
            android:layout_marginStart="@dimen/primary_side_padding"
            android:layout_gravity="start||center_vertical"/>

        <ImageButton
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:backgroundTint="@color/yp_white"
            android:src="@drawable/ic_share_24x24"
            android:layout_gravity="end||center_vertical"
            android:contentDescription="@string/share"/>
    </FrameLayout>

    <!-- НАПИСАТЬ В ПОДДЕРЖКУ -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/prinary_settings_string_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_settings_text_size"
            android:layout_marginStart="@dimen/primary_side_padding"
            android:layout_gravity="start||center_vertical"/>

        <ImageButton
            android:id="@+id/mail_to_support"
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:backgroundTint="@color/yp_white"
            android:src="@drawable/ic_support_24x24"
            android:foreground="?attr/selectableItemBackground"
            android:layout_gravity="end||center_vertical"
            android:contentDescription="@string/support"/>
    </FrameLayout>

    <!-- Пользовательское соглашение -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/prinary_settings_string_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_settings_text_size"
            android:layout_marginStart="@dimen/primary_side_padding"
            android:layout_gravity="start||center_vertical"/>

        <ImageButton
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:backgroundTint="@color/yp_white"
            android:src="@drawable/ic_next_24x24"
            android:layout_gravity="end||center_vertical"
            android:contentDescription="@string/next"/>
    </FrameLayout>

</LinearLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorPrimaryFixed">@color/yp_white</item>
        <item name="colorPrimaryVariant">@color/yp_blue</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorOnPrimaryFixed">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/yp_text_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>